<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/BookCollection</property>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>

        <property name="connection.username">root</property>
        <property name="connection.password">student</property>

        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>

        <mapping class="com.leeannjakel.entity.Author"/>
        <mapping class="com.leeannjakel.entity.AuthorResponse"/>
        <mapping class="com.leeannjakel.entity.WorksAuthorsItem"/>
        <mapping class="com.leeannjakel.entity.Book"/>
        <mapping class="com.leeannjakel.entity.BookSuggestions"/>
        <mapping class="com.leeannjakel.entity.Classifications"/>
        <mapping class="com.leeannjakel.entity.Created"/>
        <mapping class="com.leeannjakel.entity.Genre"/>
        <mapping class="com.leeannjakel.entity.Identifiers"/>
        <mapping class="com.leeannjakel.entity.Info"/>
        <mapping class="com.leeannjakel.entity.LanguagesItem"/>
        <mapping class="com.leeannjakel.entity.LastModified"/>
        <mapping class="com.leeannjakel.entity.Role"/>
        <mapping class="com.leeannjakel.entity.Type"/>
        <mapping class="com.leeannjakel.entity.User"/>
        <mapping class="com.leeannjakel.entity.WorksItem"/>
        <mapping class="com.leeannjakel.entity.WorksAuthorsItem"/>


    </session-factory>

</hibernate-configuration>
